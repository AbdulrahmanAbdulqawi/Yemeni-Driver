<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: auto;
            padding: 20px;
            text-align: center;
        }

        .welcome {
            font-size: 2.5em;
            margin-bottom: 20px;
            color: #007bff;
        }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .card {
            width: 300px;
            margin: 10px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
        }

            .card:hover {
                transform: scale(1.05);
            }

            .card img {
                width: 100%;
                height: 200px;
                object-fit: cover;
                border-bottom: 1px solid #dee2e6;
            }

        .card-body {
            padding: 15px;
        }

        .card-text {
            margin-bottom: 10px;
            font-size: 1.2em;
        }

        #map {
            height: 400px;
            margin-top: 20px;
        }

        #notificationSection {
            margin-top: 20px;
        }

        #notificationList {
            list-style-type: none;
            padding: 0;
        }

            #notificationList li {
                border: 1px solid #dee2e6;
                margin-bottom: 5px;
                padding: 10px;
            }

        button {
            background-color: #007bff;
        }

            button:hover {
                background-color: #0056b3;
            }

    </style>
</head>
<body>
    <div class="container">
        <div class="welcome">
            Welcome to the RideSharing App!
        </div>

        <div class="card-container">
            <div class="card">
                <img src="@Model.Image" alt="Driver Image">
                <div class="card-body">
                    <p class="card-text">@Model.FirstName</p>
                    <p class="card-text">@Model.Location</p>

                    <div class="card-buttons">
                        <button class="edit-button" onclick="editDriverDetails()">Edit</button>
                        <button class="view-details-button" onclick="viewDriverDetails()">View</button>
                    </div>
                </div>
            </div>

            <!-- Add more cards as needed -->

        </div>

        <div id="map"></div>

        <!-- Notification section -->
        <div id="notificationSection">
            <h3>Notifications</h3>
            <ul id="notificationList"></ul>
        </div>
    </div>

    <!-- Add your script tags for Google Maps and location updates -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.10/signalr.min.js"></script>

  @*   <script src="~/js/updateLiveLocation.js"></script> *@

    <script>
        const hubConnection = new signalR.HubConnectionBuilder()
            .withUrl("/notificationHub")
            .build();

        hubConnection.start().then(() => {
            console.log("Driver Connected to NotificationHub");
        }).catch(err => console.error(err.toString()));

        // Handle the new ride request event
        hubConnection.on("ReceiveNotification", (newRequest) => {
            // Add the new notification to the list
            const notificationList = $("#notificationList");
            notificationList.append(`<li>You have a new ride request: ${newRequest}</li>`);

            // You can customize this further, such as displaying a modal or updating the UI as needed
        });
    </script>
</body>
</html>
