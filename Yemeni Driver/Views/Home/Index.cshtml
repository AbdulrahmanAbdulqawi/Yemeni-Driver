@using Yemeni_Driver.Data
@using Yemeni_Driver.ViewModel.Home
@model RegisterSelectRolesViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!-- Add your CSS links and styles here -->
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: auto;
            padding: 20px;
            text-align: center;
        }

        .welcome {
            font-size: 2.5em;
            margin-bottom: 20px;
            color: #007bff;
        }

        .select-role-form {
            margin-top: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .role-label {
            font-weight: bold;
            display: block; /* Ensures labels are on their own line */
            margin-bottom: 5px; /* Adds some space between labels and inputs */
        }

        input[type="text"],
        select {
            width: 100%;
            padding: 10px;
            box-sizing: border-box;
            margin-bottom: 10px; /* Adds space between input elements */
        }

        button {
            background-color: #007bff; /* Use a green color for the button */
            color: #fff;
            padding: 10px 20px;
            font-size: 1em;
            cursor: pointer;
            border: none; /* Remove the default button border */
            transition: background-color 0.3s; /* Add transition for smooth color change */
            margin-bottom: 10px;
        }

        button:hover {
            background-color: #0056b3; /* Darker shade of blue on hover */
        }

        a {
            color: #007bff; /* Use the primary color for the link */
            text-decoration: none;
            margin-left: 5px; /* Adds space between the label and link */
        }

        #map {
            height: 400px;
            margin-top: 20px;
        }

        .account-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
        }

        .account-section a {
            color: #007bff;
            text-decoration: none;
        }


    </style>
</head>
<body>
    <div class="container">
        <div class="welcome">
            Welcome to the RideSharing App!
        </div>

        <form method="post" class="select-role-form">
            <div class="form-group">
                <label class="role-label" for="SelectedRole">Select Your Role:</label>
                <select asp-for="SelectedRole" asp-items="Model.AvailableRoles"></select>
            </div>

            <button type="submit">Continue</button>
        </form>

        <div class="centered-section">
            <label class="account-have "for="existingAccount">Do you already have an account?</label>
            <a asp-controller="Account" asp-action="Login">Login</a>
        </div>
    </div>

