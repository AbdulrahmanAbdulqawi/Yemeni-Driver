@using YemeniDriver.ViewModel.Request
@model List<GetRequestsViewModel>

<h2>Requests</h2>

@if (Model.Count == 0)
{
    <p>No requests available.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Passenger Name</th>
                <th>Request Time</th>
                <th>Pickup Location</th>
                <th>Dropoff Location</th>
                <th>Estimation Price</th>
                <th>Number of Seats</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.PassengerName</td>
                    <td>@request.PickupTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@request.PickupLocation</td>
                    <td>@request.DropoffLocation</td>
                    <td>@request.EstimationPrice</td>
                    <td>@request.NumberOfSeats</td>
                    <td>@request.Status</td>
                </tr>
            }
        </tbody>
    </table>
}
